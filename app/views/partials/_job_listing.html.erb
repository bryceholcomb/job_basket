<h2 class="job-position"><%= @job.position%></h2>
<h4>Posting Date: <%= time_tag(@job.posting_date) %><h4>
<% if @job.company.url.present? %>
  <p><%= link_to @job.company.name, @job.company.url %> <%= @job.location %></p>
<% else %>
  <p><%= @job.company.name %> <%= @job.location %></p>
<% end %>
<div class="job-description">
  <h3 class="job-description-header">Job Description</h3>
  <p><%= @job_description %></p>
